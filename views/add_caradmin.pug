doctype html
head
  // Latest compiled and minified CSS
  link(rel='stylesheet' href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
  // Font awesome
  script(defer='' src='https://use.fontawesome.com/releases/v5.0.9/js/all.js' integrity='sha384-8iPTk2s/jMVj81dnzb/iFR2sdA7u06vHJyyLlAd4snFpCl/SnyUjRrbdJsw1pGIl' crossorigin='anonymous')
  // Aminate.css
  script(src='https://code.jquery.com/jquery-3.3.1.min.js')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/animate.css@3.5.2/animate.min.css')
  link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css')
  // Compiled and minified JavaScript

  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  link(rel='stylesheet' type='text/css' href='css/style.css')
  style. 
    .car-form{
      background-color : #1f9abf;
      padding: 60px 125px 125px;
    } 
    label{
      color: #ffff;
    },
    label.photo {
      cursor: pointer;
      /* Style as you please, it will become the visible UI component. */
    }

    #upload-photo {
      opacity: 0;
      position: absolute;
      z-index: -1;
    }


  .container
    ul.nav.nav-pills
      li.nav-item
        a.nav-link(href='/caradmin') Back to Voiture liste
      li.nav-item
        a.nav-link.disabled(href='#' tabindex='-1' aria-disabled='true') Déconnecter
      
      //- <%= typeof msg != 'undefined' ? msg : '' %>

    form(method='POST' id='multiple_select' action='/admin/add' enctype="multipart/form-data")
      .car-form
        .form-row
          .form-group.col-md-6
            label Nom de voiture:
            input.form-control(type='text' name='car_name')
          .form-group.col-md-6
            label Prix/mois:
            select#inlineFormCustomSelect.custom-select.mr-sm-2(name='car_price')
              option(selected='') Choose...
              option(value='A partir de 400 euros') 400 euros 
              option(value='A partir de 500 euros') 500 euros
              option(value='A partir de 270 euros') 270 euros
              option(value='A partir de 350 euros') 350 euros
              option(value='A partir de 175 euros') 175 euros

        .form-group
          label Option:
          select#inlineFormCustomSelect.option.custom-select.selectoption.mr-sm-2(name='options',multiple)
            option(selected='') Choose...
            option(value='Phares antibrouillard avant avec fonction de virage statique') Phares antibrouillard 
            option(value='Climatisation Electronique') Climatisation Electronique
            option(value='aAccoudoir central avant') Accoudoir central avant
            option(value='Tapis de sol avant et arrière') Tapis de sol avant et arrièredes occupants a l'avant
            option(value='Régulateur de vitesse avec limitateur de vitesse') Régulateur de vitesse 
            option(value='Pack lumière et vision') Pack lumière et vision
            option(value='Aide au stationnement y compris avec capteurs') Aide au stationnement y compris avec capteurs
            option(value='Installation personnalisé') Installation personnalisé
            option(value='Kit électronique info') Kit électronique info
            option(value='Barre de toit') Barre de toit
          
          input.form-control(type='hidden' name='optionselecc' id='option_part')
        br
        .form-group
          label Ajout de prime/reprise de voiture:
          select#inlineFormCustomSelect.custom-select.mr-sm-2(name='reprise')
            option(selected='') Choose...
            option(value='Prime à la conversion de 2000€ et offre de reprise déduites.') Prime à la conversion de 2000€ et offre de reprise déduites.
            option(value='Avec apport et sous conditions de reprise. Prime à la conversion de 2000€ déduite.') Avec apport et sous conditions de reprise. Prime à la conversion de 2000€ déduite.
            option(value='Jusqu/n à 2000€ de reprise Volkswagen et 2000€ de prime à la conversion') Jusqu'à 2000€ de reprise Volkswagen et 2000€ de prime à la conversion.
            option(value='Avec apport et sous conditions de reprise.') Avec apport et sous conditions de reprise.
            option(value='Jusqu/à 6 500€ de reprise Volkswagen.') Jusqu'à 6 500€ de reprise Volkswagen.
            option(value='Jusqu/à 7 000€ de reprise Volkswagen et 2 000€ de prime à la conversion.') Jusqu'à 7 000€ de reprise Volkswagen et 2 000€ de prime à la conversion.
            option(value='Jusqu/à 3 000€ de reprise Volkswagen et 2 000€ de prime à la conversion.') Jusqu'à 3 000€ de reprise Volkswagen et 2 000€ de prime à la conversion

        br
        .form-group.col-md-6

          label Couleur de voiture: 
          select#inlineFormCustomSelect.couleur.custom-select.mr-sm-2(name='couleurs', multiple)
            option(selected='') Choose...
            option(value='Rouge') Rouge claire
            option(value='Gris claire') Gris
            option(value='Noire') Noire
            option(value='Orange') Orange
            option(value='Blue') Blue

        br
        .form-group.col-md-6
          label Moteur/Essence de voiture:
          select#inlineFormCustomSelect.couleur.custom-select.mr-sm-2(name='moteurs')
            option(selected='') Choose...
            option(value='Essence') Essence
            option(value='Electrique') Electrique
            option(value='Gazoil') Gazoil
            option(value='Diesel') Diesel


        br
        .form-grouptemps.col-md-6
          label Temps de financement/an
          select#inlineFormCustomSelect.couleur.custom-select.mr-sm-2(name='finance_and_cost', multiple)
            option(selected='') Choose...
            option(value='24 mois') 24 mois
            option(value='37 mois') 37 mois 
            option(value='42 mois') 42 mois
            option(value='57 mois') 57 mois
        br
        .form-grouptemps.col-md-6
          label Caution de financement
          select#inlineFormCustomSelect.couleur.custom-select.mr-sm-2(name='caution')
            option(selected='') Choose...
            option(value='1700') 1 700
            option(value='2040') 2 140
            option(value='3500') 2 840

        br
        .form-grouptemps.col-md-6
          label Nombre de places
          select#inlineFormCustomSelect.couleur.custom-select.mr-sm-2(name='places')
            option(selected='') Choose...
            option(value='5') 5
            option(value='7') 7

        .file-field.input-field
          .btn
            span File
            input(type='file' name='myImg')
          .file-path-wrapper
            input.file-path.validate(type='text')
        input.btn.btn-default(type='submit',value='submit', name='submit' )
    script(src='../js/caradmin.js')

  script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js')
  script(src='https://code.jquery.com/jquery-3.3.1.min.js')
  script(src='https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.min.js')
