#wrapper
  .title-newsletter
    h2 Bienvenue 
    //if user.authentificate 
      #user.name
    body.sidebar-is-reduced
    header.l-header
      div.l-header__inner.clearfix
        div.c-header-icon.js-hamburger
          div.hamburger-toggle
            span.bar-top
            span.bar-mid
            span.bar-bot
        div.c-header-icon.has-dropdown
          span.c-badge.c-badge--red.c-badge--header-icon.animated.swing="13"
          i.fa.fa-bell
          div.c-dropdown.c-dropdown--notifications
            div.c-dropdown__header
            div.c-dropdown__content
        div.c-search
          input.c-search__input.u-input(
          placeholder="Search..."
          type="text"
          )
        div.header-icons-group
          div.c-header-icon.basket
            span.c-badge.c-badge--blue.c-badge--header-icon.animated.swing="4"
            i.fa.fa-shopping-basket
          div.c-header-icon.logout
            i.fa.fa-power-off
        div.l-sidebar
          div.logo
            div.logo__txt="D"
          div.l-sidebar__content
            nav.c-menu.js-menu
              ul.u-list
                li.c-menu__item.is-active(
                  data-toggle="tooltip"
                  title="Flights"
                )
                  div.c-menu__item__inner
                    i.fa.fa-plane
                    div.c-menu-item__title
                      span="Flights"
                li.c-menu__item.has-submenu(
                  data-toggle="tooltip"
                  title="Modules"
                )
                  div.c-menu__item__inner
                    i.fa.fa-puzzle-piece
                    div.c-menu-item__title
                      span="Modules"
                    div.c-menu-item__expand.js-expand-submenu
                      i.fa.fa-angle-down
                  ul.c-menu__submenu.u-list
                    li="Payments"
                    li="Maps"
                    li="Notifications"
                li.c-menu__item.has-submenu(
                  data-toggle="tooltip"
                  title="Statistics"
                )
                  div.c-menu__item__inner
                    i.far.fa-chart-bar
                    div.c-menu-item__title
                      span="Statistics"
                li.c-menu__item.has-submenu(
                  data-toggle="tooltip"
                  title="Gifts"
                )
                  div.c-menu__item__inner
                    i.fa.fa-gift
                    div.c-menu-item__title
                      span="Gifts"
                li.c-menu__item.has-submenu(
                  data-toggle="tooltip"
                  title="Settings"
                )
                  div.c-menu__item__inner
                    i.fa.fa-cogs
                    div.c-menu-item__title
                      span="Settings"
  main.l-main
    div.content-wrapper.content-wrapper--with-bg
      h1.page-title="Dashboard"
      div.page-content="Content goes here"
      
