#wrapper
  .title-newsletter
    h2 #{title}
  .container
    .row
      .col-9
        ul.nav.nav-pills
          li.nav-item
            a.nav-link(href='#') Back to website
          li.nav-item
            a.nav-link.disabled(href='#' tabindex='-1' aria-disabled='true') DÃ©connecter



      .col-3
        #v-pills-tab.nav.flex-column.nav-pills(role='tablist' aria-orientation='vertical')
          ul
            li 
              a(href='/admin').btn.btn-outline-primary Liste des voitures
            li
              a(href='/admin-comments').btn.btn-outline-primary Liste des commentaires
            li 
              a(href='/admin-newsletters').btn.btn-outline-primary Liste des newsletters
  
    a.btn.btn-default(href='/admin/add').btn.btn-outline-info Ajouter une voiture :) 
    br
    br
 
  .container

  table.table.table-bordered
    thead
      tr
        th(scope='col') ID
        th(scope='col') Car Name
        th(scope='col') Prix
        th(scope='col') Type
        th(scope='col') Jante
        th(scope='col') Option
        th(scope='col') Moteur
        th(scope='col') Images
        th(scope='col') Actions

    tbody
      each car, i in cars
        tr
          th(scope='row' href='/cars/'+car._id)= car.car_id
          td(href='/cars/'+car._id)= car.car_name
          td(href='/cars/'+car._id)= car.car_price
          td(href='/cars/'+car._id)= car.car_type
          td(href='/cars/'+car._id)= car.car_jante
          td(href='/cars/'+car._id)= car.car_options
          td(href='/cars/'+car._id)= car.car_moteur
          td(href='/cars/'+car._id)= car.car_images
          td
            a.btn.btn-primary(href='/admin/edit/'+car._id type='button') Editer
            form(action="/admin/delete/" + car._id, method="POST")
              input(type="hidden", id="deleteId", value=car._id)
              button(type='button', class="delete").btn.btn-danger Supprimer


  script(src='../js/caradmin.js')

