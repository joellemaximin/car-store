                  .modal-body
                    address
                    | Manchester 20 
                    br
                    |  Hyde
                    br
                    |  M32 338
                    #headOffice(style='text-align: center;')
                      h3 Head Office
                    address
                      | Edimbourg 
                      br
                      |  Blackford
                      br
                      |  M35 338
                  .modal-footer
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Close
  


      // contact-Inperson
    div
      button#postcode.optionItem(type='button', data-toggle='modal', data-target='#modal5') In per
      #animateBtn.contentItem(style='text-align: center;' data-type-holder='contact-postcode')

        .sub-header#modal5.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
          .modal-dialog(role='document')
            .modal-content
              .modal-header
                h3#exampleModalLabel.modal-title contact your nearest retailer
                  button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') ×
                .modal-body
                  div
                    p Enter your postcode or retailer&apos;s name
                    a(href='#') here to put the postcode
                .modal-footer
                  button.btn.btn-secondary(type='button', data-dismiss='modal') Close


