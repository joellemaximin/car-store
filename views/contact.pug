  .wrapper
    div
      //-------------------- By email
      button 
        a#animateBtn.optionItem(href='/contact-us/envoyer-nous-un-petit-mot') By email

    // ----------------------- PHONE 
    div
      button#phoneLinks.optionItem(type='button', data-toggle='modal', data-target='#modal2') On Call
      // by phone
      .sub-header#modal2.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
        .contentItem(data-type-holder='phone')
        #customerCare(style='text-align: center;')  
          .modal-dialog(role='document')
            .modal-content
              .modal-header
                h3#exampleModalLabel.modal-title Here you can find some numbers to call us
                  button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') ×
              .modal-body
                h3 Customer Care
                p Mon - Sun: 8:00 AM - 8:00 PM
                .number(title='customerCare')
                  | (+44) 0745 2322 246
                #generalEnquire(style='text-align: center;')
                h3 General Enquier
                p Mon - Fri: 8:00 AM - 6:00 PM
                p Sat: 8:00 AM 4:00 PM
                .number(title='generalEnquire')
                  | (+44) 0745 2902 293
                br
              .modal-footer
                button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                button.btn.btn-primary(type='button') Save changes
  
    

    // -------------------contact letter
    div
      button#animateBtn.optionItem(type='button', data-toggle='modal', data-target='#modal4') By posting a letter
