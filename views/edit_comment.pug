head
  // Latest compiled and minified CSS
  link(rel='stylesheet' href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
  // Font awesome
  script(defer='' src='https://use.fontawesome.com/releases/v5.0.9/js/all.js' integrity='sha384-8iPTk2s/jMVj81dnzb/iFR2sdA7u06vHJyyLlAd4snFpCl/SnyUjRrbdJsw1pGIl' crossorigin='anonymous')
  // Aminate.css
  link(rel='stylesheet' href='/CSS/comments.css')
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  link(rel='stylesheet' type='text/css' href='css/style.css')
#wrapper
  .title-comments
    h2 #{title}
  .container-wide
    form(method='POST' id='#' action='/comments/edit/'+comment._id)
      .comment-form
        .form-group
          label Prenom:
          input.form-control.col-md-4(type='text' name='first_name', value=comment.first_name )
        .form-group
          label Nom:
          input.form-control.col-md-4(type='text' name='last_name', value=comment.last_name )
        .form-group
          label Email:
          input.form-control.col-md-4(type='text' name='email', value=comment.email )
        .form-group
          label Commentaire:
          textarea.form-control.col-md-4(type='text' name='body')= comment.body
          
        input.btn.btn-default(type='submit',value='Submit' )
  
